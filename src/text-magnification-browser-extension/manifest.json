{
    "manifest_version": 3,
    "name": "Text Magnifier Extension",
    "version": "1.0",
    "description": "Magnifies text on hover for improved readability.",
    "permissions": [],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["style.css"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["/assets/Normal_Select.cur", "/assets/Link_Select.cur"],
            "matches": ["<all_urls>"]
        }
    ]
}